{
    "name": "@anshulsanghi/eslint-plugin-playwright",
    "version": "0.0.8",
    "description": "ESLint Plugin For Playwright Tests",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "test": "cspell \"**/*\" --no-progress && npm run build && npm run unit-test",
        "unit-test": "jest",
        "test-watch": "jest --watch",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "prepare": "husky install",
        "postinstall": "npm run build",
        "postversion": "git push --tags && git push"
    },
    "author": "Anshul Sanghi",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.17.7",
        "@types/eslint-utils": "^3.0.1",
        "@types/jest": "^27.4.1",
        "babel-loader": "^8.2.3",
        "cspell": "^5.19.2",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.2"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "printWidth": 80,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "dependencies": {
        "@babel/preset-typescript": "^7.16.7",
        "@typescript-eslint/scope-manager": "^5.15.0",
        "@typescript-eslint/utils": "^5.15.0",
        "eslint-utils": "^3.0.0"
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "src/tests/(.*)/(.*).ts"
        ],
        "testMatch": [
            "<rootDir>/src/tests/**/*.{spec,test}.ts"
        ],
        "preset": "ts-jest"
    }
}
